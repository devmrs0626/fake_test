<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta http-equiv="refresh" content="120">
	<link rel="stylesheet" type="text/css" href="styles.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<script>

		$(document).ready(function(){
			$("#submit_button").click(function(){
				var action = $('#create_form').attr("action");
		        $.ajax({
		                  type: "POST",
		                  url: action,
		                  data: $('#create_form').serialize(),
		                  success: function(response) {
		                  	if(response.result == "success"){
		                  		location.href = "/result/"+response.test_id;
		                  	}
		                  	
		                  },
		                  error: function() {
		                  }
		        });
			});
		});
	</script>
<body>
	<form id="create_form" class="box" action="/create" method="post">
		<div class="input-group mb-3">
	  		<span class="input-group-text" id="inputGroup-sizing-default">제목</span>
	  		<input name="title" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
		</div>
		<div class="input-group mb-3">
	  		<span class="input-group-text" id="inputGroup-sizing-default">결과</span>
	  		<input name="result" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
		</div>
		<input id="submit_button" class="btn btn-primary" type="button" value="제출">
	</form>
</body>
</html>